@import '~@/styles/mixins'
@import '~@/styles/variables'

#hero
  h1
    margin: 100px auto
    max-width: 700px

#full-width-img
  padding: 0

  img
    width: 100%

.icons
  margin-top: 30px

.experiences
  .experience
    margin: 60px auto

  p.label
    margin-top: 10px

#grid
  img
    display: block

  .col
    margin-bottom: 15px
    margin-top: 15px
    background-size: cover

    .col-inner
      position: relative

      &:before
        content: ''
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        z-index: 0
        opacity: 0
        background: $grey
        transition: opacity 0.6s ease

    &:hover
      opacity: 1
      .col-inner
        p
          opacity: 1
          transform: translateY(0)

        &:before
          opacity: 0.9

    p
      position: absolute
      width: 100%
      text-align: center
      top: 47%
      z-index: 1
      color: $blue
      opacity: 0
      transform: translateY(-100px)
      transition: transform 0.6s ease, opacity 0.6s ease

dump_media_cache()
